<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>

        <!-- Redirect Rules -->

        <rule name="bos core banking" stopProcessing="true">
          <match url="https://bos.center/core-banking-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/core-banking-solutions"
                  redirectType="Permanent" />
        </rule>

        <rule name="bos nbfc" stopProcessing="true">
          <match url="https://bos.center/nbfc-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/nbfc-software"
                  redirectType="Permanent" />
        </rule>

        <rule name="bos nidhi" stopProcessing="true">
          <match url="https://bos.center/nidhi-company-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/nidhi-software"
                  redirectType="Permanent" />
        </rule>

        <rule name="bos loan management" stopProcessing="true">
          <match url="https://bos.center/loan-management-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/loan-management-software"
                  redirectType="Permanent" />
        </rule>

        <rule name="bos microfinance" stopProcessing="true">
          <match url="https://bos.center/microfinance-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/microfinance-software"
                  redirectType="Permanent" />
        </rule>

        <rule name="bos p2p lending" stopProcessing="true">
          <match url="https://bos.center/peer-to-peer-lending-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/peer-to-peer-loan-software"
                  redirectType="Permanent" />
        </rule>

        <rule name="bos cooperative society" stopProcessing="true">
          <match url="https://bos.center/credit-cooperative-society-software/" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^bos\.center$" />
          </conditions>
          <action type="Redirect"
                  url="https://aopay.in/credit-cooperative-society-software"
                  redirectType="Permanent" />
        </rule>

        <!-- Remove trailing slash (non-files only) -->
        <rule name="RemoveTrailingSlash" stopProcessing="true">
          <match url="(.+)/$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Redirect"
                  url="/{R:1}"
                  redirectType="Permanent" />
        </rule>

        <!-- Serve real files directly -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- Clean URL â†’ .html file -->
        <rule name="HtmlFallback" stopProcessing="true">
          <match url="^(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}.html" matchType="IsFile" />
          </conditions>
          <action type="Rewrite" url="{R:1}.html" />
        </rule>

      </rules>
    </rewrite>
  </system.webServer>
</configuration>
